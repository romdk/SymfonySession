{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<main id="detailCategorieMain">
    <h2>{{ categorie.nomCategorie }}</h2>
    <div class="modules">
        <ul>
            {% for module in categorie.modules %}
                <li>
                    <span class="module">{{ module }}</span>
                    <a href="{{ path('supprimer_module', {'id':categorie.id,'moduleId': module.id}) }}"><i class="fa-solid fa-xmark"></i></a>
                </li>
            {% endfor %}
        </ul>
        <div id="divBtn">
            <button id="btnAjout">Ajouter un module</button>
        </div>
    </div>
    <div id="overlay">
        <div class="form">
            {{ form_start(formAddModule) }}
            <div class="formRow">
                {{ form_row(formAddModule.nomModule) }}
            </div>
            <div class="formRow">
                {{ form_row(formAddModule.categorie) }}
            </div>
            <div class="btnAjouter">
                {{ form_row(formAddModule.ajouter) }}
            </div>
            {{ form_end(formAddModule) }}
            <i id="btnFermer" class="fa-solid fa-xmark"></i>
        </div>    
    </div>
</main>   
{% endblock %}
